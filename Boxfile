web1:
  document_root: public
  php_version: 5.4.14
  php_extensions:
    - mbstring
    - mcrypt
    - pdo_mysql
    - redis
    - curl
    - zip
    - xcache
  php_session_save_handler: redis
  php_session_save_path: "tcp://tunnel.pagodabox.com:6379"
  shared_writable_dirs:
    - app/storage/cache
    - app/storage/logs
    - app/storage/meta
    - app/storage/sessions
    - app/storage/views
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; php composer.phar install --prefer-source"
  before_deploy:
    - "php artisan config:publish atticmedia/anvard"
    - "php artisan migrate --package=cartalyst/sentry"
    - "php artisan migrate --package=atticmedia/anvard"
    - "php artisan migrate"
    - "php artisan db:seed"
  after_deploy:
    - "rm -f app/storage/cache/*"
    - "php artisan cache:clear"
    - "rm -f app/storage/views/*"
  cache1:
    type: redis